<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/head") %>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/addProduct.css" />
    <script src="/js/validacionProducto.js"></script>
</head>

<body>
    <header>
        <%- include("partials/header") %>
    </header>
    <main>
        <h1>Editar producto</h1>
        <form method="POST" enctype="application/x-www-form-urlencoded"
            action="/product/<%- product.id %>/update?_method=PATCH" id="mainForm">
            <!-- name -->
            <div class="form-group">
                <label for="nombre">Nombre </label>
                <input type="text" class="form-control" id="nombre" name="nombre"
                    placeholder="Ej: Manual del Jugador Dungeons & Dragons 3.5" value="<%- product.nombre %>">
            </div>

            <!-- price, number -->
            <div class="form-group">
                <label for="precio">Precio</label>
                <input type="number" step="any" name="precio" class="form-control" id="precio" placeholder="Ej: 150.50"
                    value="<%- product.precio %>">
            </div>
            <!-- stock -->
            <div class="form-group">
                <label for="stock">Stock</label>
                <input type="number" min="0" name="stock" class="form-control" id="stock" placeholder="Stock"
                    value="<%- product.stock %>">
            </div>
            <div class="invalid-feedback">Example invalid custom select feedback</div>

            <!-- description -->
            <div class="form-group">
                <label for="descripcion">Descripción</label>
                <textarea name="descripcion" class="form-control" id="descripcion" rows="3"
                    placeholder="Condiciones, detalles, consideraciones varias."><%- product.descripcion %></textarea>
            </div>
            <span class="hide" id="dado">
                <!-- color -->
                <div class="form-group">
                    <label for="color">Color del producto</label>
                    <input type="text" class="form-control" id="color" name="color" placeholder="Ej: MTG clásico"
                        value="<%- detalle.dataValues.color %>">
                </div>
                <!-- caras -->
                <div class="form-group">
                    <label for="caras">Cantidad de caras</label>
                    <input type="text" class="form-control" id="caras" name="caras" placeholder="Ej: MTG clásico"
                        value="<%- detalle.dataValues.caras %>">
                </div>
                <input type="hidden" name="id_categoria" value="3">
                <button type="submit">Editar producto</button>
            </span>
        </form>

    </main>

    <footer><%- include("partials/footer") %></footer>
</body>

</html>