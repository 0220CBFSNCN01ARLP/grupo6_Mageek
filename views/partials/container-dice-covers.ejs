<article class="container-product">
    <% for (let i=0;i<mainArrays.dados.length;i++) {  %>

    <div class="box-index">
        <a class="a-productlink" href="/product/<%= mainArrays.dados[i].productData.id %>"><img class="img-product-index"
                src="/img/product/<%= mainArrays.dados[i].pics[0].dataValues.url %>" alt="product"></a>
        <h4 class="name-product-index"><%- mainArrays.dados[i].productData.nombre %></h4>
        <h5 class="price-product-index">$<%- mainArrays.dados[i].productData.precio %></h5>
        <% if (mainArrays.dados[i].productData.borrado||mainArrays.dados[i].productData.stock==0) { %> <h4 style="color:red;font-size: 0.8rem;">Fuera de stock!
        </h4>
        <% } else{ %>
            <a href="/user/saveToCart/<%= mainArrays.dados[i].productData.id %>">
                <button type="button" class="btn btn-success btn-rounded">Añadir al carrito! <i
                        class="fa fa-shopping-cart"></i></button>
            </a>
        <% } %>
    </div>

    <% } %>

    <% for (let i=0;i<mainArrays.folios.length;i++) {  %>

    <div class="box-index">
        <a class="a-productlink" href="/product/<%= mainArrays.folios[i].productData.id %>"><img class="img-product-index"
                src="/img/product/<%= mainArrays.folios[i].pics[0].dataValues.url %>" alt="product"></a>
        <h4 class="name-product-index"><%- mainArrays.folios[i].productData.nombre %></h4>
        <h5 class="price-product-index">$<%- mainArrays.folios[i].productData.precio %></h5>
        <% if (mainArrays.folios[i].productData.borrado||mainArrays.folios[i].productData.stock==0) { %> <h4 style="color:red;font-size: 0.8rem;">Fuera de stock!
        </h4>
        <% } %>
        <a href="/user/saveToCart/<%= mainArrays.folios[i].productData.id %>">
            <button type="button" class="btn btn-success btn-rounded">Añadir al carrito! <i
                    class="fa fa-shopping-cart"></i></button>
        </a>
    </div>

    <% } %>
</article>