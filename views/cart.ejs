<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/head") %>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/cart.css" />
</head>

<body>
    <header class="">
        <!-- Searchbar -->
        <%- include("partials/header") %>
        <!-- ProductCart toggler -->
    </header>

    <section>
        <h1>CARRITO!</h1>
    </section>
    <div class="container">
        <div class="row">
            <main class="col-md-12">
                <div class="card">



                    <table class="table table-borderless table-shopping-cart">
                        <thead class="text-muted">
                            <tr class="small text-uppercase">
                                <th scope="col">Producto</th>
                                <th scope="col" width="120">Cantidad</th>
                                <th scope="col" width="120">Precio</th>
                                <th scope="col" class="text-right" width="200"></th>
                            </tr>
                        </thead>
                        <% for (let i = 0; i < productArray.length;i++){ %>
                        <tbody>
                            <tr>
                                <td>
                                    <figure class="itemside">
                                        <div class="aside"><img src="/img/product/<%- picArray[i][0].dataValues.url %>" class="img-sm">
                                        </div>
                                        <figcaption class="info">
                                            <a href="#" class="title text-dark"><%= productArray[i].nombre %></a>
                                            <p class="text-muted small"><%= productArray[i].categorias.dataValues.categoria %></p>
                                        </figcaption>
                                    </figure>
                                </td>
                                <td>
                                    <select class="form-control">
                                        <% for (let index = 0;index < 10; index ++) { %>
                                            <option
                                            <% if (cartArray[i].dataValues.cantidad == index) { %> selected <% } %>
                                            ><%= index %></option>
                                        <% } %>
                                    </select>
                                </td>
                                <td>
                                    <div class="price-wrap">
                                        <var class="price">$<%= productArray[i].precio*cartArray[i].dataValues.cantidad %></var>
                                        <small class="text-muted"> $<%= productArray[i].precio %></small>
                                </td>
                </div> <!-- price-wrap .// -->
                <td class="text-right">
                    <a href="" class="btn btn-danger">Borrar <i class="fa fa-trash"></i></a>
                </td>
                <% } %>
                </table>
                <div class="card-body border-top">
                    <button class="btn btn-success float-md-right">Comprar</button>
                </div>
        </div> <!-- card.// -->
        </main>
    </div>
    </div>

    <footer>
        <%- include("partials/footer") %>
    </footer>
</body>

</html>