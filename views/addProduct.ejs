        <!-- Formulario -->

        <div class="container">
            <h1 class="frase">
                Registro de producto:</h1>
            <form method="POST" enctype="multipart/form-data" action="/user/add">
                <!-- name -->
                <div class="form-group">
                    <label for="name">Nombre de producto</label>
                    <input type="text" class="form-control" id="name" name="name" aria-describedby="emailHelp"
                    placeholder="Ej: Manual del Jugador Dungeons & Dragons 3.5" required>
                </div>

                <!-- price, number -->
                <div class="form-group">
                    <label for="price">Precio del producto</label>
                    <input name="price" type="text" class="form-control" id="price" aria-describedby="price" placeholder="Ej: 150.50"
                        required>
                </div>

                <!-- description -->
                <div class="form-group">
                    <label for="description">Descripción</label>
                    <textarea name="description" class="form-control" id="description" rows="3"
                    placeholder="Condiciones, detalles, consideraciones varias."></textarea>
                </div>
                <!-- usage, dropdown -->
                <div class="form-group">
                    <label for="usage">Uso</label>
                    <select  name="usage"class="form-control" id="usage" required>
                        <option style="display: none;" value="">Elija una opción</option>
                        <option value="new">Nuevo (en su paquete)</option>
                        <option value="fine">Casi nuevo (poco uso)</option>
                        <option value="used">Usado</option>
                        <option value="done">Muy usado</option>
                    </select>
                </div>
                <!-- category??
